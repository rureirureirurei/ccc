{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dune build",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "eval $(opam env) && dune build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
} 